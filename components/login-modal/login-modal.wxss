.login-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%; /* 全屏宽 */
  height: 100%; /* 全屏高 */
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5); /* 半透明背景 */
}

.modal-content {
  position: absolute;
  bottom: 0; /* 从底部弹出 */
  width: 100%;
  background-color: #FFFFFF;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.2); /* 底部阴影 */
  animation: slide-up 0.3s ease-out; /* 弹出动画 */
}

.modal-header {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-top: 50rpx;
  margin-bottom: 10rpx;
  text-align: center;
}

.modal-body {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 60rpx;
  text-align: center;
}

.auth-button {
  font-size: 32rpx;
  color: white;
  border-radius: 40rpx;
  text-align: center;
  background-color: #76d6b3; 
}

.cancel-button {
  background-color: #ddd9d9; 
  color: rgb(189, 187, 187);
  margin-top: 20rpx;
  border-radius: 40rpx;
  margin-bottom: 50rpx;
  font-size: 32rpx;
}