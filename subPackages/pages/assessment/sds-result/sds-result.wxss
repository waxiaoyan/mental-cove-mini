.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}
.result-card {
  background: white;
  border-radius: 16rpx;
  margin: 80rpx;
  width:40%;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.score-box {
  padding: 20rpx;
  border-radius: 16rpx 16rpx 0 0;
  text-align: center;
}

.score-title {
  display: block;
  color: white;
  font-size: 30rpx;
}

.score-value {
  display: block;
  color: white;
  font-size: 80rpx;
  font-weight: bold;
}

.assessment-box {
  padding: 40rpx;
  text-align: center;
}

.assessment-title {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.assessment-level {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 15rpx;
}

.assessment-desc {
  color: #666;
  font-size: 28rpx;
}

.explanation {
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.section-title {
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
  margin: 20rpx 0;
}

.content {
  color: #666;
  font-size: 28rpx;
  line-height: 1.6;
}

.action-buttons {
  display: flex;
  margin: 40rpx 30rpx;
  gap: 20rpx;
}

.btn {
  flex: 1;
  border-radius: 50rpx;
  color: white;
  font-size: 30rpx;
}

.retest {
  background: #2196F3;
}

.disclaimer {
  padding: 30rpx;
  color: red;
  font-size: 24rpx;
  line-height: 1.4;
}