<navigation-bar  title="SDS抑郁测评结果" bind:tap="backToAccessment" back="{{true}}" ></navigation-bar>
<view class="container">
  <!-- 评分卡片 -->
  <view class="result-card">
    <view class="score-box" style="background: {{resultColor}};">
      <text class="score-title">得分</text>
      <text class="score-value">{{score}}</text>
    </view>

    <view class="assessment-box">
      <text class="assessment-title">评估结果：</text>
      <text class="assessment-level" style="color: {{resultColor}};">{{assessment.level}}</text>
    </view>
  </view>

  <!-- 详细解释 -->
  <view class="explanation">
    <view class="section-title">结果说明: </view>
    <text class="content">{{assessment.explanation}}</text>
    
    <view class="section-title">建议: </view>
    <text class="content">{{assessment.suggestion}}</text>
  </view>

  <!-- 操作按钮 -->
  <view class="action-buttons">
    <button class="btn retest" bindtap="retest">重新测试</button>
  </view>

  <!-- 免责声明 -->
  <view class="disclaimer">
    <text>重要提示：本测试结果仅供参考，不能作为临床诊断依据。如需专业帮助，请咨询精神心理科医生。</text>
  </view>
</view>